@page "/kho"
@using BlazorServerApp.Models
@using Microsoft.EntityFrameworkCore
@inject BlazorServerApp.Data.AppDbContext _context
@inject IJSRuntime JS


<div class="container-fluid p-4">
    <h3 class="mb-4">Quản Lý Kho</h3>
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-light">
                    <h5 class="mb-0">@((isEdit) ? "Cập nhật kho" : "Thêm kho")</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="@formModel" OnValidSubmit="Save">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Tên kho</label>
                                <InputText @bind-Value="formModel.TenKho" class="form-control" />
                            </div>
                            <div class="col-md-8">
                                <label class="form-label fw-bold">Ghi chú</label>
                                <InputText @bind-Value="formModel.GhiChu" class="form-control" />
                            </div>
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">
                                @((isEdit) ? "Cập nhật" : "Thêm mới")
                            </button>
                            @if (isEdit)
                            {
                                <button type="button" class="btn btn-secondary ms-2" @onclick="CancelEdit">
                                    Hủy
                                </button>
                            }
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th>Tên kho</th>
                                <th>Ghi chú</th>
                                <th class="text-center" style="width:140px;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kho in khos)
                            {
                                <tr>
                                    <td>@kho.TenKho</td>
                                    <td>@kho.GhiChu</td>
                                    <td class="text-center">
                                        <a href="javascript:void(0)" class="text-warning me-2" title="Sửa" @onclick="() => Edit(kho)">
                                            <i class="bi bi-pencil-square fs-5"></i>
                                        </a>
                                        <a href="javascript:void(0)" class="text-danger" title="Xóa" @onclick="() => ConfirmDelete(kho.Id)">
                                            <i class="bi bi-trash fs-5"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Kho> khos = new();
    private Kho formModel = new();
    private bool isEdit = false;
    private string? errorMessage;

    // Ham khoi tao khi load component
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    // Load danh sach don vi tinh tu database
    private async Task LoadData()
    {
        khos = await _context.Khos
            .OrderBy(k => k.TenKho)
            .ToListAsync();
    }

    // Xu ly them moi hoac cap nhat
    private async Task Save()
    {
        errorMessage = null;

        formModel.TenKho = formModel.TenKho?.Trim();

        if (string.IsNullOrWhiteSpace(formModel.TenKho))
        {
            errorMessage = "Tên kho không được để trống";
            return;
        }

        bool isTenKhoTrung = isEdit
            ? _context.Khos.Any(k => k.TenKho == formModel.TenKho && k.Id != formModel.Id)
            : _context.Khos.Any(k => k.TenKho == formModel.TenKho);

        if (isTenKhoTrung)
        {
            errorMessage = "Tên kho đã tồn tại!";
            return;

        }

        if (isEdit)
        {
            // Neu dang sua, tim id de cap nhat
            var kho = await _context.Khos.FindAsync(formModel.Id);
            if (kho != null)
            {
                kho.TenKho = formModel.TenKho;
                kho.GhiChu = formModel.GhiChu;
            }
        }
        else
        {
            // Neu them moi
            _context.Khos.Add(formModel);
        }

        // Luu thay doi xuong database
        await _context.SaveChangesAsync();

        // Reset form va trang thai
        formModel = new Kho();
        isEdit = false;

        // Load lai danh sach sau khi cap nhat
        await LoadData();
    }

    // Gan du lieu vao form de sua
    private void Edit(Kho kho)
    {
        formModel = new Kho
        {
            Id = kho.Id,
            TenKho = kho.TenKho,
            GhiChu = kho.GhiChu
        };
        isEdit = true;
        errorMessage = null;

    }

    // Huy chinh sua va reset form
    private void CancelEdit()
    {
        formModel = new Kho();
        isEdit = false;
        errorMessage = null;

    }

    // Xoa kho
    private async Task Delete(int id)
    {
        var isKhoUserUsed = await _context.KhoUsers.AnyAsync(k => k.KhoId == id);
        var isPhieuUsed = (await _context.PhieuNhaps.AnyAsync(p => p.KhoId == id) || await _context.PhieuXuats.AnyAsync(p => p.KhoId == id));
        var isXnkPhieuUsed = (await _context.XnkPhieuNhaps.AnyAsync(x => x.KhoId == id) || await _context.XnkPhieuXuats.AnyAsync(x => x.KhoId == id));

        if (isKhoUserUsed)
        {
            errorMessage = "Không thể xóa vì kho này được sử dụng bới kho user";
            return;
        }

        if (isPhieuUsed)
        {
            errorMessage = "Không thể xóa vì kho này được sử dụng bới phiếu nhập hoặc xuất";
            return;
        }

        if (isXnkPhieuUsed)
        {
            errorMessage = "Không thể xóa vì kho này được sử dụng bới phiếu nhập hoặc xuất đã hiệu chỉnh";
            return;
        }

        var kho = await _context.Khos.FindAsync(id);
        if (kho != null)
        {
            _context.Khos.Remove(kho);
            await _context.SaveChangesAsync();
            await LoadData();
        };
    }

    private async Task ConfirmDelete(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "Bạn có chắc muốn xóa?"))
        {
            await Delete(id);
        }
    }
}
